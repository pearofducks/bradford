-unless admin?
  .new-post-container
    %h1.new-post-title Admin login
    %hr
    %form.pure-form(action="/login" method="post")
      %fieldset.pure-group
        %input#username.pure-input-1-2(type="text" name="username" placeholder="Username" required)
        %input#password.pure-input-1-2(type="password" name="password" placeholder="Password" required)
      %button.pure-button(type="submit") Login
